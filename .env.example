# ==============================================
# AstroMedia v2.0 - Environment Configuration
# ==============================================
# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==============================================
# Application
# ==============================================
NODE_ENV=development
PORT=8000

# ==============================================
# Database - Neon (Serverless PostgreSQL)
# ==============================================
# Get your Neon database URL from: https://console.neon.tech
# Format: postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require
NEON_DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/astromedia?sslmode=require

# Direct connection (for migrations) - usually the same as NEON_DATABASE_URL
# Sometimes Neon provides a different URL for direct connections
NEON_DATABASE_URL_DIRECT=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/astromedia?sslmode=require

# ==============================================
# Redis
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_PORT=6379

# ==============================================
# Security & Authentication
# ==============================================
# JWT Secret (MUST be at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-change-this
JWT_EXPIRES_IN=7d

# ==============================================
# CORS
# ==============================================
# Frontend URL for CORS
CORS_ORIGIN=http://localhost:5173

# ==============================================
# LLM & AI Provider API Keys
# ==============================================
# OpenRouter (for GPT-4, Claude, Llama, etc.)
OPENROUTER_API_KEY=sk-or-v1-xxxxx...

# Hugging Face (for open-source models)
HF_API_KEY=hf_xxxxx...

# ==============================================
# Google Cloud Platform
# ==============================================
# For Vertex AI (Veo3) and Google Drive integration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
# Base64-encoded service account JSON credentials
# Generate: cat service-account.json | base64 -w 0
GOOGLE_CLOUD_CREDENTIALS=base64_encoded_json_here
GCS_STORAGE_BUCKET=astromedia-assets

# ==============================================
# Social Media Integration
# ==============================================
# Ayrshare API (for social media posting)
AYRSHARE_API_KEY=xxxxx...

# Instagram Business API
# Get access token from: https://developers.facebook.com/apps
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_VERIFY_TOKEN=astromedia_verify_token_change_this
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Facebook Pages API
# Get access token from: https://developers.facebook.com/apps
FACEBOOK_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_VERIFY_TOKEN=astromedia_verify_token_change_this
FACEBOOK_APP_SECRET=your_facebook_app_secret

# LinkedIn API
# Get access token from: https://www.linkedin.com/developers/apps
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# TikTok for Business API
# Get access token from: https://developers.tiktok.com
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# X (Twitter) API v2
# Get credentials from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ==============================================
# Rate Limiting
# ==============================================
# Global rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Queue & Worker Configuration
# ==============================================
# Number of concurrent campaign workers
QUEUE_CONCURRENCY=3

# ==============================================
# User Quotas
# ==============================================
# Default monthly API call quota for new users
DEFAULT_MONTHLY_QUOTA=1000

# ==============================================
# Monitoring & Observability
# ==============================================
# Enable Prometheus metrics endpoint
ENABLE_METRICS=true

# Enable OpenTelemetry tracing
ENABLE_TRACING=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ==============================================
# Frontend (Vite)
# ==============================================
# API URL for frontend
VITE_API_URL=http://localhost:8000

# WebSocket URL
VITE_WS_URL=ws://localhost:8000

# ==============================================
# Monitoring (Optional)
# ==============================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# ==============================================
# Docker Configuration
# ==============================================
API_PORT=8000
FRONTEND_PORT=5173

# ==============================================
# Deployment (Production Only)
# ==============================================
# Database connection pooling
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ==============================================
# NOTES
# ==============================================
# 1. Generate strong secrets for production:
#    - JWT_SECRET: openssl rand -base64 32
#    - POSTGRES_PASSWORD: openssl rand -base64 24
#
# 2. For Google Cloud credentials:
#    cat service-account.json | base64 -w 0
#
# 3. Never expose these credentials in client-side code!
#    All API keys are stored and used on the backend only.
#
# 4. In production, consider using a secret management service:
#    - AWS Secrets Manager
#    - Google Cloud Secret Manager
#    - HashiCorp Vault
